<resources>

    <style name="WelcomeScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#17c19a</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="WelcomeScreen"/>

    <style name="MainTheme" parent="WelcomeScreen">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowBackground">@mipmap/app_background</item>
        <item name="colorButtonNormal">#17c19a</item>
        <item name="android:textColor">#ffffff</item>
        <item name="colorControlActivated">#17c19a</item>
    </style>

    <!-- Notepad Screen style -->
    <style name="NotepadScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#17c19a</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/app_background</item>
    </style>

    <style name="RegisterAccentButton" parent="ThemeOverlay.AppCompat.Dark">
        <!-- customize colorButtonNormal for the disable color -->
        <item name="colorButtonNormal">#446d63</item>
        <!-- customize colorAccent for the enabled color -->
        <item name="colorAccent">#17c19a</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="commonListItemStyle">
    </style>

</resources>
