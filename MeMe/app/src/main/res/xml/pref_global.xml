<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/key_autorun_switch"
        android:summary="@string/switcher_on"
        android:title="@string/switch_autorun" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/key_tips_switch"
        android:summary="@string/switcher_on"
        android:title="@string/switch_tips" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/key_autoupdate_switch"
        android:summary="@string/switcher_on"
        android:title="@string/switch_autoupdate" />

    <Preference android:title="@string/action_change_password"
        android:key="@string/pref_change_password_button"
        android:summary="@string/action_change_password"/>

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_notification_list"
        android:entryValues="@array/pref_notification_list_values"
        android:key="@string/key_notification_list_preference"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/list_preference_notification_type" />

    <Preference android:title="@string/action_reset_settings"
        android:key="@string/pref_reset_settings_button"
        android:summary="@string/action_change_password"/>

    <Preference android:title="@string/action_deactivate_account"
        android:key="@string/pref_deactivate_account_button"
        android:summary="@string/action_change_password"/>

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_language_list"
        android:entryValues="@array/pref_language_list_values"
        android:key="@string/key_language_list_preference"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/list_preference_language_type" />



</PreferenceScreen>
