<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_relative_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|start|end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_exit_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@null"
            android:drawableLeft="@mipmap/exit"
            android:drawableStart="@mipmap/exit"
            android:onClick="clickOnExit"
            android:paddingLeft="13dp" />

        <LinearLayout
            android:id="@+id/central_bottom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="0"
            android:gravity="bottom|start|end"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/welcome_app_slogan"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                app:srcCompat="@mipmap/app_slogan" />

            <TextView
                android:id="@+id/app_build_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="bottom"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/add_new_channel_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@null"
            android:drawableEnd="@mipmap/edit_channels"
            android:drawableRight="@mipmap/edit_channels"
            android:onClick="clickOnEditChannels"
            android:paddingRight="13dp" />

    </LinearLayout>

</RelativeLayout>
