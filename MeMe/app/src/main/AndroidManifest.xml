<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spand.meme">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--Welcome Screen With SignIn and SignUp buttons-->
        <activity
            android:name=".core.activity.main.WelcomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Login Screen-->
        <activity
            android:name=".core.activity.main.LoginActivity"
            android:label="@string/title_activity_login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.activity.main.WelcomeActivity" />
        </activity>

        <!--Register Screen-->
        <activity
            android:name=".core.activity.main.RegisterActivity"
            android:label="@string/title_activity_register">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.activity.main.WelcomeActivity" />
        </activity>

        <!--Main Menu Screen-->
        <activity android:name=".core.activity.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.activity.main.WelcomeActivity" />
        </activity>

        <!--Menu of Available Settings in Application Screen-->

        <!--Menu of Global Settings Screen-->
        <activity android:name=".core.activity.settings.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.activity.main.MainActivity" />
        </activity>

        <!--Menu of Global Settings Screen-->
        <activity android:name=".core.activity.settings.GlobalSettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.activity.settings.SettingsActivity" />
        </activity>

        <!--Menu of Password change Screen-->
        <activity android:name=".core.activity.channel.ChangePasswordActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.activity.settings.GlobalSettingsActivity" />
        </activity>

        <!--Menu of Settings Reset screen-->
        <activity android:name=".core.activity.settings.ResetSettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.activity.settings.GlobalSettingsActivity" />
        </activity>

        <!--Menu of Account Remove Screen-->
        <activity android:name=".core.activity.settings.DeactivateAccountActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.activity.settings.GlobalSettingsActivity" />
        </activity>

        <!--Menu of Channel Settings Screen-->
        <activity android:name=".core.activity.settings.ChannelsSettingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.activity.settings.SettingsActivity" />
        </activity>

        <!--Menu of Settings for Selected Channel Screen-->
        <activity android:name=".core.activity.settings.CertainChannelSettingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.activity.channel.ChannelSettingActivity" />
        </activity>

        <!--Menu of Common Settings for Chats Screen-->
        <activity android:name=".core.activity.channel.ChannelSettingActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.activity.main.MainActivity" />
        </activity>

        <!--Menu of Incoming Messages Screen-->
        <activity android:name=".modules.chat.activity.IncomingMessagesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.activity.main.MainActivity" />
        </activity>

        <!--Contact Search Screen-->
        <activity android:name=".modules.chat.activity.ContactSearchActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".modules.chat.activity.IncomingMessagesActivity" />
        </activity>

        <!--Main Chat Screen-->
        <activity android:name=".modules.chat.activity.MainChatActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".modules.chat.activity.IncomingMessagesActivity" />
        </activity>

        <!--Menu of channels Screen-->
        <activity android:name=".core.activity.channel.ChannelsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.activity.main.MainActivity" />
        </activity>

    </application>

</manifest>